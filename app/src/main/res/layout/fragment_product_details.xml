<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.ProductDetails"
    android:background="#FBFBFB"
    android:padding="15dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left_arrow"
            android:layout_gravity="center|start"/>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/l_back"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_bookmark_24"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageFlipper"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textSize="16sp"
                android:text="Product Name"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:text="Product Name"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_light"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:text="Product Name"/>
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/book_consultation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#E5601D"
        android:layout_gravity="bottom"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="85dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book free consultation"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>


</FrameLayout>